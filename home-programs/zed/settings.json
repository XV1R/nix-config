// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "language_models": {
    "openai_compatible": {
      "llama.cpp": {
        "api_url": "http://localhost:8080",
        "available_models": [
          {
            "name": "Qwen3-Esper3-Reasoning-CODER-Instruct-12B",
            "display_name": "Qwen3-Coder-12B",
            "max_tokens": 32768,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
          {
            "name": "Qwen3-Code-Reasoning-4b",
            "display_name": "Qwen3-Coder-4b",
            "max_tokens": 2048,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false,
            },
          },
        ],
      },
    },
  },
  "indent_guides": {
    "line_width": 3,
    "active_line_width": 1,
    "coloring": "indent_aware",
  },
  "buffer_font_family": "Miracode",
  "edit_predictions": {
    "mode": "subtle",
  },
  "show_edit_predictions": false,
  "disable_ai": false,
  "agent": {
    "message_editor_min_lines": 3,
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest"
    },
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest",
    },
    "model_parameters": [],
  },
  "base_keymap": "Cursor",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "macOS Classic Light",
    "dark": "macOS Classic Dark",
  },
}
